{
  "name": "@dbarjs/npmauth",
  "type": "module",
  "version": "0.0.13-beta.1",
  "packageManager": "pnpm@9.1.1",
  "description": "CLI tool to authenticate with npm registry",
  "author": "Eduardo Barros <dbarjs@jsbx.dev>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/dbarjs",
  "homepage": "https://github.com/dbarjs/npmauth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbarjs/npmauth.git"
  },
  "bugs": "https://github.com/dbarjs/npmauth/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "npmauth": "./bin/npmauth.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev:prepare": "unbuild --stub",
    "build": "unbuild",
    "build:stub": "unbuild --stub",
    "lint": "eslint .",
    "dev": "node ./bin/npmauth.mjs dev ./playground",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "c12": "^1.10.0",
    "citty": "^0.1.6",
    "dotenv": "^16.4.5",
    "execa": "^9.1.0",
    "package-manager-detector": "^1.5.0",
    "rc9": "^2.1.2",
    "ufo": "^1.5.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@antfu/ni": "^27.0.0",
    "@antfu/utils": "^9.3.0",
    "@types/node": "^24.9.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.38.0",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.1.2",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^2.0.0",
    "vite": "^7.1.11",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
